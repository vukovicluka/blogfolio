---
import { SOCIAL_LINKS } from "../config";

---

<footer class="global-footer">
	<div class="footer-inner">
		<nav class="social-links">
			<a href={SOCIAL_LINKS.linkedin} aria-label="LinkedIn">
				<svg viewBox="0 0 24 24" aria-hidden="true" role="presentation">
					<path
						d="M19 0H5C2.24 0 0 2.24 0 5v14c0 2.76 2.24 5 5 5h14c2.76 0 5-2.24 5-5V5c0-2.76-2.24-5-5-5zM7 19H4V9h3zm-1.5-11C4.67 8 4 7.33 4 6.5S4.67 5 5.5 5 7 5.67 7 6.5 6.33 8 5.5 8zM20 19h-3v-5.2c0-1.24-.02-2.8-1.7-2.8-1.7 0-1.96 1.33-1.96 2.7V19h-3V9h2.88v1.37h.04c.4-.76 1.38-1.56 2.85-1.56 3.05 0 3.62 2.01 3.62 4.63z"
					/>
				</svg>
			</a>
			<a href={SOCIAL_LINKS.github}  aria-label="GitHub">
				<svg viewBox="0 0 24 24" aria-hidden="true" role="presentation">
					<path
						d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.44 9.78 8.2 11.38.6.11.82-.26.82-.58 0-.29-.01-1.05-.02-2.07-3.34.73-4.04-1.61-4.04-1.61-.55-1.38-1.35-1.74-1.35-1.74-1.1-.75.08-.74.08-.74 1.21.08 1.85 1.25 1.85 1.25 1.08 1.86 2.83 1.32 3.53 1.01.11-.79.42-1.32.76-1.63-2.67-.3-5.47-1.34-5.47-5.97 0-1.32.47-2.39 1.24-3.24-.13-.3-.54-1.51.12-3.15 0 0 1.01-.32 3.31 1.23a11.5 11.5 0 0 1 6.02 0c2.3-1.55 3.31-1.23 3.31-1.23.66 1.64.25 2.85.12 3.15.77.85 1.24 1.92 1.24 3.24 0 4.64-2.8 5.66-5.48 5.96.43.37.81 1.1.81 2.22 0 1.6-.01 2.89-.01 3.29 0 .32.22.69.83.57 4.76-1.6 8.2-6.08 8.2-11.38C24 5.37 18.63 0 12 0z"
					/>
				</svg>
			</a>
		</nav>
		<p class="copyright">
			© 2025 Luka Vuković. All rights reserved.
		</p>
	</div>
</footer>

<style>
.global-footer {
	flex-shrink: 0;
	padding: 2rem clamp(1rem, 5vw, 4rem);
	background-color: #fff;
	color: #111;
	text-align: center;
}

.footer-inner {
	width: min(100%, 1100px);
	min-width: min(670px, 100%);
	max-width: 1100px;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 1rem;
}

.social-links {
	display: flex;
	justify-content: center;
	gap: 1.5rem;
	margin-bottom: 1rem;
	flex-wrap: wrap;
}

.social-links a {
	display: inline-flex;
	align-items: center;
	color: inherit;
	text-decoration: none;
	padding: 0.35rem;
	border-radius: 999px;
	transition: color 0.2s ease;
}

.social-links a svg {
	width: 1.5rem;
	height: 1.5rem;
	fill: currentColor;
}

.social-links a:hover {
	color: #7c3aed;
}

.copyright {
	margin: 0;
	font-size: 0.9rem;
	color: rgba(17, 17, 17, 0.65);
	letter-spacing: 0.08em;
}
</style>

